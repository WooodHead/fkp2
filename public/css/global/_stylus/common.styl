*
  box-sizing: border-box
  padding: 0
  margin: 0

li
  list-style-type: none

.markdown-body
  li
    list-style-type: disc;
    li
      list-style-type: circle;


a
  color: rgba(0,0,0,.65);
  background: transparent;
  text-decoration: none;
  outline: none;
  cursor: pointer;
  -webkit-transition: color .3s ease;
  transition: color .3s ease;


img
  width: 100%;
  height: auto;


.boxer
  width: 100%
  height: 100%
  box-sizing: border-box
  display: table
  overflow: hidden
  .boxer-header
    display: table-row
  .boxer-body
    display: table-row
  .boxer-footer
    display: table-row
