*
  box-sizing: border-box
  padding: 0
  margin: 0

li
  list-style-type: none

.markdown-body
  li
    list-style-type: disc;
    li
      list-style-type: circle;


a
  color: rgba(0,0,0,.65);
  background: transparent;
  text-decoration: none;
  outline: none;
  cursor: pointer;
  -webkit-transition: color .3s ease;
  transition: color .3s ease;


img
  width: 100%;
  height: auto;


.boxer
  width: 100%
  height: 100%
  box-sizing: border-box
  display: table
  overflow: hidden
  .boxer-header
    display: table-row
  .boxer-body
    display: table-row
  .boxer-footer
    display: table-row



//适用于类似简单的浮动，.flex-start>div(li/p....)是垂直居中的
//<div class="flex-row">
//<div></div><span></span><a></a>
//</div>
display-flex($flex-direction = row, $justify-content = flex-start, $align-items = initial, $align-content = initial)
  display: flex
  flex-direction: $flex-direction
  justify-content: $justify-content
  if($align-items != initial)
    align-items: $align-items
  if($align-content != initial)
    align-content: $align-content

.flex-row
  display-flex(row,flex-start,center,center)

.flex-row-wrap
  @extends .flex-row
  flex-wrap: wrap;

.flex-cloumn
  display-flex(column,flex-start,center,center)
