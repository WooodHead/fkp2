@import "./_common/index"

step()

.steps
  li
    // width: 33.333%         这个宽度要根据 li的数量来定
    &.steps-status-finish
      .steps-icon
        position: relative
        &:before
          background: #108ee9
          content: "\e6a3"
          color: #fff
      .steps-tail
        i
          &:after
            background: #108ee9

  .steps-step
    font-size: 14px
    width: 120px
    text-align: left;
    .steps-icon
      width: 26px
      height: @width
      line-height: 24px
      text-align: center
      border-radius: @width
    p
      color: #333
      max-width: @width

  .steps-tail
    i
      background: #e9e9e9
      &:after
        background: @background
