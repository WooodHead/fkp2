.inputGroup
  font-size: 16px
  inputgroup()
  fkp-dd()
  .none
    display: none
  lable,.inputItem
    // padding: 0
    // margin-bottom: 10px
    &.radioItem
      padding: 0
  .btn
    padding: 5px 20px
    min-width: 100px
    height: initial
  input
    width: 18em
    border-radius: 4px
    box-shadow: inset 0 0px 1px rgba(0,0,0,.0.9)
    padding: 6px 10px
    &[type='select']
      border-radius: 1px
    &[type="submit"]
      background-color: #fab427;
      border-color: #fab427;
      box-shadow: initial;
      color: #fff;
      &:hover
        opacity: 1;
        background-image: initial
        background-color: #ffbf13
      &:active
        background-image: initial
        background-color: #ffa200

    &:focus
      border-color: #2585cf
      box-shadow: inset 0 0px 1px rgba(0,0,0,.075),0 0 3px rgba(41, 157, 216,.6)
