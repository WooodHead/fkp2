@import "../../input/index";
@import "../../radio/index";
@import "../../button/index";


a
  text-decoration: underline;

.inputGroup
  lable,.inputItem
    padding: 0 0 1em 0;
  .fkp-input-error
    position: absolute;
    bottom: 0;
    left: 1em;
  .for-code         //图片验证码
    input
      width: 12em
  .fkp-desc
    width: 7em
    text-align: right;
    img
      width: 56%
      vertical-align: middle;
      display: inline-block;
    a
      color: #999
      display: inline-block;
      text-decoration: none

.form-submit
  width: 100%;
  margin: 1em 0
  font-size: 16px;

.hbody
  overflow: hidden;
  a
    color: #144bff
  .item-other-login-list
    margin-top: 10px;
    li
      display: inline-block;
      margin-right: 10px;
      transition: all 1s ease-in-out
      &:hover
        transform: translate(0,-3px);
    a
      color: inherit;
      text-decoration: none;

.qrcode
  text-align: center;
  margin-top: 60px;
  margin-bottom: 22px;
  font-size: 16px;
  color: #666
  .qrcode-wz
    margin-top: 28px
    margin-bottom: 25px
  p
    line-height: 22px
  img
    width: 160px
  a
    text-align: right;
