/**
 * 控制背景颜色、字体颜色等版本
 * 调用： {themd}
 */
themd = {
  background: #fff,
  color: #666,
  '.level0 li,.level1>.itemCategory>span':{
    border-left: 3px solid transparent
  },
  '.level0 li:hover,.level1>.itemCategory>span:hover':{
    background: #ecf6fd
    border-left-color: #108ee9
    color: #108ee9
    transition: all 0.3s ease-in-out
  },
  '.level1 li,.level1 span':{         //leven1=========二级菜单有三级列表
    color: #7B7777
  },
  '.level1 li:before': {              //这个控制三四级的的小圆点颜色
    background: #7B7777
  },
  '.level0>.itemCategory>span:hover':{
    color: #108ee9
  },
  '.level0 .level1,.level1 li':{
    border-left: none
  },
  '.level0 .level1:hover,.level1 li:hover':{
    background: none
  },
  '.left-sidebar-head':{
    background: #fff
  }
}
/**
 * 控制整体的间距 行高等
 * 调用： {spacing}
 */
spacing = {
  '.level0 li,.level0 span':{
      padding-left: 18%
      line-height: 44px
  }
  // '.level0 .level1,.level1 li,.level1 span':{
  '.level0 .level1':{
    padding-left: 0
    line-height: 38px
  }
  '.level1 li:before':{                       //这里是给三四级菜单添加小圆点
    content: ""
    border-radius: 5px
    position: absolute
    top: 45%
    left: -1px
    width: 5px
    height: 5px
  }
  '.level1.itemroot:before':{
    top: 9%
  }
  '.level1 li':{
    position: relative
    padding-left: 12px
  },
  '.level1 ul':{
    margin-left: 22%
  }
}
/**
 * 控制整体的字体
 * 调用： {fontSize}
 */
fontSize = {
  '.level0>.itemCategory>span':{
    font-size: 16px
  },
  '.level0 li': {
    font-size: 14px
  },
  '.level1 li':{
    font-size: 12px
  }
}
