display-flex($flex-direction = row, $justify-content = flex-start, $align-items = initial, $align-content = initial)
  display: flex
  flex-direction: $flex-direction
  justify-content: $justify-content
  align-items: $align-items
  align-content: $align-content


/**
 * 直接写: content: '/xxxx',
 * 最终生成：
 * font-family:"iconfont" !important;
 * font-style:normal;
 * -webkit-font-smoothing: antialiased;
 * -webkit-text-stroke-width: 0.2px;
 * -moz-osx-font-smoothing: grayscale;
 * font-size: 16px;
 * content: '/xxxx',
 */
iconfont()
  font-family:"iconfont" !important;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px
content(n)
  iconfont()
  content: n
