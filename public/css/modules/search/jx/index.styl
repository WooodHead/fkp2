@import "../_common/index"

$defaultheight = 36px
#search
  >div
    search()
    display-flex(row, flex-start)
    border: 2px solid #2585cf
    position: relative
    height: 40px;
    .dropdown-link-parent
      width: 80px
      .itemCategory
        .caption
          line-height: $defaultheight
        ul
          dropdown-ul($defaultheight)
    .inputGroup
      input
        height: $defaultheight
      .fkp-dd
        min-height: $defaultheight
        height: 100%
        ul
          dropdown-ul(@min-height)

    button
      padding: 0.4em 1.7em;
