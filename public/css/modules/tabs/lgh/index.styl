colors()
  text-decoration: none
  color: #108ee9

text()
  background-color: #ecf6fd;
  color: #108ee9;
  border-right-color: #108ee9;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  -webkit-transition: all .3s ease;
  transition: all .3s ease;
  a,a:hover
    color: #108ee9;
text2()
  border-right: 3px solid transparent;
  margin-left: -1px;
  left: 1px;
  position: relative;
  z-index: 1;

.tabsGroup
  background: #fff
  display: flex
  font-size: 16px
  justify-content: center
  // 整体框架是左右结构的
  &.tabsGroupX
    border: 1px solid #ddd
    flex-direction: row
    align-items: flex-start;
    .tabsMenus
      width: 35%
      height: 100%
      .hlist
        flex-direction: column
        padding: 1em 0
        // &.selected,&:hover{
        //   border-bottom: 2px solid #2db7f5;
        //   background-color: transparent;
        // }
    .tabsBoxes
      border-left: 1px solid #ddd
  // 整体框架是上下结构的
  &.tabsGroupY
    border: 1px solid #ddd
    flex-direction: column
    align-items: center
    align-content: center
    .tabsMenus
      width: 100%
      height: 3em
      // border-bottom: 1px solid #ddd
      .hlist
        margin-left: -1px
        flex-direction: row
        >li
          border-left: 1px solid #ddd
          height: 100%
          width: 50%
  //tabs的头部
  .tabsMenus
    flex: 0 0 auto
    .hlist
      display: flex
      justify-content: center
      align-items: center
      align-content: center
      height: 100%
      text-align: center
      color: rgba(0,0,0,0.65);
      a
        &:hover
            colors()
      span,a
        display: block

        // &:hover
        //   color()
      >li
        font-size: 14px
        // text()

  //tabs的内容部分
  .tabsBoxes
    padding: 2em 0
    flex: auto
    .inputGroup
      input
        width: 17em

.tabs-menu-body,.tabs-menu-body-parent
  height: 100%

.itemrootCkb
  display: none


