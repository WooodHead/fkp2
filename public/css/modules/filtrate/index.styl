@import '../list/hlist.styl'

hlist-default()

a
  color: #7e7e7e;

.treeGroupY
  background-color: #fff;
  font-size: 16px;
  display:flex;
  flex-direction:row;
  height: 100%;
  overflow: hidden;
  width: 100%;
  .tree-menu-body-parent
    width: 100%;
  .tree-menu-body
    >ul
      >li
        >.itemCategory
          >.itemrootCkb
            display: none;
          >.caption
            font-size: 1.1em;

  .itemCategory
    position: relative;

  .caption
    display: inline-block;

  li
    font-size: 14px;
    line-height: 36px;
    position: relative;
    z-index: 10;
    white-space: nowrap;
    &.selected
      border-right: 2px solid #2db7f5;
      background-color: #eaf8fe;

    &.itemSelected
      border-right: 2px solid #2db7f5;
      background-color: #eaf8fe;

    &.itemroot  //节点 li
      position: relative;
      &:hover
        background-color: transparent;
      &:before
        content: none;
    &:before
      font-family: "iconfont";
      content: '\e60c';
      margin-right: 1px;
      display: inline-block;
      font-size: 6px;
      color: #e2dede;
      transition: all .3s ease;
    ul
      display: inline-block;
      list-style: none;
      padding: 0;
      li
        font-size: 12px;
        display: inline-block;
        vertical-align: top;
        margin-left: 2em;
        font-size: 1em;
        &::before
          content: '';
        .itemCategory
          >.itemrootCkb
            ~ul
              display: none;
        &.itemroot
          &.selected
            .itemCategory
              >.itemrootCkb
                ~ul
                  display: block;
                &:checked
                  ~ul
                    display: block;
        .caption
          font-size: 1em;


