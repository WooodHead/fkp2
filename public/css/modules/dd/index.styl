iconfont()
  font-family:"iconfont" !important;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;


.dropdown-item
  .itemrootCkb
    display: none;
  .caption
    display: block;
    line-height: 40px;
    padding: 0 5%
    position: relative;
    cursor: pointer;
    color: #333
    i
      display: inline-block;
      iconfont()
      position: absolute;
      top: 0
      right: 5%
      &:before
        width: 14px;
        height: 14px;
        content: "\e616"

  .itemCategory
    position: relative;
    ul
      display: none;
      border: 1px solid #ddd;
      box-shadow: 0 1px 1px #ECECEC;
      background: #fff;
      color: #666;
      font-size: 14px;
      position: absolute;
      top: 40px;
      left: 0;
      margin-top: -2px;
      width: 100%
      z-index: 2
      height: 0;
      // transform: translateY(0);
      // transition: height 0.5s ease-in-out;
      li
        border-bottom: 1px solid #ddd
        cursor: pointer;
        padding: 0 5%;
        line-height: 38px
        &:hover
          background: #ecf6fd
  .selected
    .caption
      i
        &:before
          content: "\e6a3"
    ul
      display: block;
      height: auto
      // transform: translateY(100);
      // transition: height 0.5s ease-in-out;


/**
 * 按钮类型
 */
.dropdown-button
    .caption
      border: 1px solid #ddd
      border-radius: 4px

/**
 * 按钮类型2,icon左边有边线
 */
.dropdown-button-icon-border
    .caption
      border: 1px solid #ddd
      border-radius: 4px
      i
        border-left: 1px solid #ddd
        padding-left: 5%

/**
 * 链接类型
 */
.dropdown-link
  .caption
    color: #108ee9
    i
      position: initial
      margin-left: 10px;
  .itemCategory
    ul
      margin-top: 0px;
      box-shadow: 0 1px 10px #ececec;
      li
        border-bottom: none
  &:hover
    .caption
      color: #49a9ee
      i
        &:before
          content: "\e6a3"
      ~ul
        display: block
  .selected
    ul
      display: none;



