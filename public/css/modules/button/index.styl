.btn{
  display: inline-block;
  padding: .4em 1em;
  font-size: 14px;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  border: 1px solid transparent;
  border-radius: 4px;
  border-radius: 2px;
  text-decoration: none;
  &:hover{
    filter: unquote('progid:DXImageTransform.Microsoft.Alpha(opacity=90)');
    // opacity: 0.9;
    background-image: linear-gradient(transparent,rgba(0,0,0,.09) 40%,rgba(0,0,0,.1))
  }
  &:active{
    filter: unquote('progid:DXImageTransform.Microsoft.Alpha(opacity=80)');
    // opacity: 0.8;
    background-image: linear-gradient(transparent,rgba(0,0,0,.08) 40%,rgba(0,0,0,.1))
  }

}

+ prefix-classes('btn-')
  .defalut
    @extends .btn
    color: #333;
    background-color: #fff;
    border-color: #ccc;

  .primary
    @extends .btn
    color: #fff;
    background-color: #0078e7;
    border-color: #0078e7;




.inputGroup{
  .btn{
    width: 6em;
    outline:none;
  }
}
