// 下拉菜单 fkp-dropdown 的缩写
.inputGroup{
    .fkp-dd{
        width: 15.5em;
        height: 2.8em;
        line-height: 1.9;
        position: relative;
        &+span[class="fkp-input-box"]{
            display: none;
        }
        /* 下拉菜单选项 */
        .fkp-dd-list{
          display: none;
        }
        ul{
          margin: 0;
          padding: 0;
          background: #fff;
          position: absolute;
          z-index: 999;
          left: 0;
          top: 2.8em;
          width: 15.4em;
          list-style: none;
          border: 1px solid rgb(190, 190, 190)d;
          border-radius: 5px;
          li, .fkp-dd-option{
            padding: 0 0.5em;
            height: 2em;
            line-height: 2em;
            &:hover{
              cursor: pointer;
              background-color: rgb(245, 249, 254);
            }
          }
        }
        &:after{
            content: '\e661';
            display:block;
            color:#d6d6d6;
            padding-top: 0.1em;
            position:absolute;
            right:0.5em;
            top:0.35em;
        }
        // &:before{
