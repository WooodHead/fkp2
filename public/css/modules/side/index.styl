.side
  border: 1px solid #ddd
  width: 300px
  min-height: 400px
  .itemrootCkb
    display: none
  &.side-left
    float: left
    margin-right: 20px
  .hlist
    margin: 0 8px 10px 8px
    >li
      border-bottom: 1px dashed #ddd
      padding: 10px 0
      .itemCategory
        >a,span
          color: #258ce3
          font-size: 16px
          margin-bottom: 8px
          display: block
        ul
          font-size: 0
          margin-left: -5px
        li
          font-size: 12px
          display: inline-block
          margin-left: 5px
  a
    &:hover
      color: #258ce3
      text-decoration: underline
