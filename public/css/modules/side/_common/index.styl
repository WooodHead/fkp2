@import "../../_common/index"
.itemrootCkb
  display: none;
/**
 * icon  三角形
 * @type {[type]}
 */
iconTriangle($fontsize = 16px, $color = #999, $color2 = #666, $top= 28%, $right= 20px)
  &:after
    content: "\e618"
    font-size: $fontsize
    color: $color
    position: absolute;
    top: $top
    right: $right
  &:hover,&.active
    &:after
      color: $color2

/**
 * 结构上添加 icon,css微调   iconlist 无定位   iconlist2有定位、
 * @type {[type]}
 */
iconlist($fontsize = 16px, $color = #999, $color2 = $color)
 i
  iconfont()
  font-size: $fontsize
  color: $color
  vertical-align: super;
  &:hover
    color: $color2

iconlist2($fontsize = 16px, $color = #999, $color2 = $color)
 i
  iconfont()
  font-size: $fontsize
  color: $color
  position: absolute;
  top: 20%;
  left: 20px;
  &:hover
    color: $color2

boxColor($color = #000, $bcolor = #e3e3e3, $borderRadius = 0 5px 5px 0, $background = #fff)
  color: $color
  border: 2px solid  $bcolor
  border-radius: $borderRadius
  background: $background
  a
    color: $color

/**
 * 数据flex, 数据间带有'|'的样式
 * @type {[type]}
 */
sidesmallUl()
  display-flex(row,flex-start,center,center)
  flex-wrap: wrap;
  flex: 1;
  {fontSize12}
  margin-left: 8px;
  overflow: hidden;
  li
    margin-left: -2px;
    padding-right: 10px;
    padding-left: 10px;
    position: relative;
    &:before
      content: "|"
      position: absolute;
      top: 10%;
      left: 0;
  a
    {color999}



sideUl($marginLeft= 6px)
  display-flex(row,flex-start,center,center)
  li
    margin-left: $marginLeft
    &:first-child
      margin-left: 0


//list 文字在图片里
picUl($sort = flex-start,$width= 50%, $marginBottom= 8px)
  display-flex(row,$sort)
  flex-wrap: wrap;
  li
    width: $width
    margin-bottom: $marginBottom
    position: relative;
    a
      background: #fff
      position: absolute;
      bottom: 0
      left: 0
      width: 100%;
      display: block;
      opacity: 0.8
      text-align: center;



//更多
mores($bottom = 0, $right= 0, $color= #999)
  position: absolute;
  bottom: $bottom
  right: $right
  color: $color
  display: block;
