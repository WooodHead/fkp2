forul()
  list-style: none
  text-align: left
  li
    background-color: #fff
    font-size: 0.8em
    text-align: center
    display: inline-block
    // width: 2em
    // height: 2em
    padding: 0.5em
    vertical-align: top
    border: 1px solid #e8e8e8
    border-radius: 0.3em
    margin: 0.5em 0 0.5em 0.5em
    transition: all .2s linear
    &:hover
      transform: translate3d(0, -2px, 0)
      box-shadow: 0 5px 10px rgba(0,0,0,0.1)
    .hheader
      height: 80%
      overflow: hidden
      img
        width:96%
        height: auto
    .hbody
      margin-top: 0.5em
      height: auto
      overflow: hidden
      a.descript
        color: #b1b1b1

.books-parent
  font-size: 16px
  .books
    ul, ol
      margin: 0
      forul()
      li
        margin-right: 0.1em
        overflow: hidden
        a
          text-decoration: none
          color: #777
        span
          display: block
          font-size: 16px
          &.star
            width: 100%
            color: #fad6c7
            position: relative
            &::before
              font-size: 6em
              display: block
              position: absolute
              left: 0.35em
              top: -0.05em
              line-height: 100%
        span.img
          display: block
          position: relative
          width: 100%
          height: 5.5em
          max-height: 5.6em
          margin: 0 auto
          overflow: hidden
          border-radius: 0.2em
          border: 1px solid #fff2df
          &:hover
            z-index: 1000

          img
            width: 80%
            margin-top: 0.2em

