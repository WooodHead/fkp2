little = 'screen and (max-width: 768px)'
medium = 'screen and (min-width: 768px) and (max-width: 992px)'
large = 'screen and (min-width: 992px) and (max-width: 1200px)'
xlarge = 'screen and (min-width: 1200px)'

ip4 = 'screen and (max-width: 320px)'
ip6 = 'screen and (max-width: 375px)'
ip6p = "only screen and (min-device-width: 376px) and (max-device-width: 480px)"


mobileTest()
  .splite
    display: none;
  .columBox
    width: 100%;
    box-sizing: border-box;
  .test
    width: 100%
    float: left;
    margin-left: 0.3em
  .grids-item
    width: 100%
    // display: inline-block;
    // vertical-align: middle;

@media little
  .box
    width: 94%
    padding: 0
    padding: 2%;
  .bx-pager
    display: none
  #slider
    width: 100%;
    margin: 0;
    padding: 0
  .descript
    font-size: 0.8em
    padding: 4%
  h4
    font-size: 1.4em
  #slider
    .bx-wrapper
      margin-bottom: 2em;
    .bx-viewport
      border: none
      border-bottom: 1px solid #f3f3f3

@media medium
  .box
    width: 100%
    height: 55%
  .bx-pager
    display: none

@media large
  .box
    height: 50%

@media xlarge
  .box
    height: 60%


@media ip6
  mobileTest()
  .test
    .books-parent
      .books
        ul.hlist
          // background-color: red
          li
            width: 7.2em
            height: 7.2em
            margin-left: 3px
            margin-bottom: 0
            margin-top: 3px

@media ip6p
  mobileTest()
  .test
    .books-parent
      .books
        ul.hlist
          li
            width: 8em
            height: 8em
            a
              font-size: 1.2em

@media ip4
  mobileTest()
  .test
    .books-parent
      .books
        ul.hlist
          li
            width: 6.2em
            height: 6.2em
