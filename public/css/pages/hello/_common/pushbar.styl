.history-parent
  position: absolute;
  left: 0.3em
  bottom: 10px
  padding: 0.3em
  box-sizing: border-box;
  width: 100%
  height: 44.4px;
  .history
    li
      text-align: center;
      width: 3.5em
      height: 3.5em
      line-height: 0.9
      overflow: hidden;
      display: table-cell;
      vertical-align: middle;
      border-radius: 1px;
      margin-right: 4px
      margin-bottom: 4px
      font-size: 10px;
      a
        font-size: 10px;
