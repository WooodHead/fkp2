#pushboom
  margin-top 4em

.pushboomContainer
  text-align: left;
  background-color: #fff
  border-radius: 2px
  padding: 0.6em
  min-height: 180px
  position: relative;
  background-color: #e9fbf0
  // border: 1px solid #f4f4f4;
  // box-shadow: inset 0 0 14px 6px rgba(206, 206, 206, 0.5)
  .hlist
    padding: 0
    margin: 0
    li
      border-radius: 3px;
      display: inline-block;
      vertical-align: top;
      width: 5.8em
      height: 5.8em
      // border: 1px solid #51a6e0
      border-radius: 2px
      margin-right: 5px
      margin-bottom: 5px
      background-color: #fffffe
      padding: 0.2em;
      box-sizing: border-box;
      font-size: 14px
      line-height: 1
      white-space: normal
      text-align: left
      a
        font-size: 0.8em;
        text-decoration: none;
        color: burlywood

