.test
  width: 100%
  text-align: left
  position: relative;

  .books-parent
    width: 100%;
    font-size: 16px
    .books
      ul
        padding: 0
        margin: 0
        li
          width: 7em;
          height: 7em;
          margin-top: 0
          border-radius: 2px
          padding: 0.3em
          position: relative;
          text-align: center;
          a
            display: block;
            margin-top: 2.2em;
            text-align: left;
            font-size: 1em
            color: #9c9c9c
            &:before
              position: absolute;
              left: 0.2em
              top: 0.2em
              color: #e3e3e3
      .itemroot
        .itemCategory ul, ul
          padding: 0
          margin: 0
          margin-left: 1em
          .itemroot
            ul
              margin-top: 1em;

.columContainer
  width: 100%
  overflow: hidden;
.columWrap
  width: 100%
  overflow-x: auto;
.columBox
  width: 100%;

.grids
  display: inline-block;
  .hlist
    margin: 0
    padding: 0
  .grids-item
    border: none
    display: inline-block;
    vertical-align: top;

.bottombar-descript
  padding: 0.6em;
  color: #ababab;
  margin-top: 7px;

little = 'screen and (max-width: 768px)'
ip4 = 'screen and (max-width: 320px)'
ip6 = 'screen and (max-width: 375px)'
ip6p = "only screen and (min-device-width: 376px) and (max-device-width: 480px)"

mobileTest()
  .splite
    display: none;
  .columBox
    width: 202%;
  .test
    width: 49%
    float: left;
  .grids-item
    width: 100%
    // display: inline-block;
    // vertical-align: middle;

@media ip6
  mobileTest()
  .test
    .books-parent
      .books
        ul.hlist
          // background-color: red
          li
            width: 7.3em
            height: 7.3em

@media ip6p
  mobileTest()
  .test
    .books-parent
      .books
        ul.hlist
          li
            width: 8.8em
            height: 8.8em
            a
              font-size: 1.2em

@media ip4
  mobileTest()
  .test
    .books-parent
      .books
        ul.hlist
          li
            width: 6.7em
            height: 6.7em
