little = 'screen and (max-width: 768px)'
medium = 'screen and (min-width: 768px) and (max-width: 992px)'
large = 'screen and (min-width: 992px) and (max-width: 1200px)'
xlarge = 'screen and (min-width: 1200px)'

.box
  position: absolute
  display: block
  margin: auto
  left: 0px
  right: 0px
  top: 0px
  bottom: 0px
  height: 40%
  width: 60%
  text-align: center
  vertical-align: middle
  ul
    list-style: none

#slider
  height: 100%
  overflow: hidden

h2
  color: #000
  font-weight: 800

.descript
  padding: 2%
  text-align: left
  color: #adadad

@media little
  .box
    width: 100%
  .bx-pager
    display: none

@media medium
  .box
    width: 100%
    height: 55%
  .bx-pager
    display: none

@media large
  .box
    height: 50%

@media xlarge
  .box
    height: 60%
