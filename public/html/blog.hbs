<!doctype html>
<html>
<head>
  <title>博客</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no" />
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black" />
  <meta content="telephone=no" name="format-detection" />
  <link rel="shortcut icon" href="/images/favicon.ico" />
  {{{commoncss}}}
  {{{attachCss}}}
  {{{pagecss}}}
  <meta name="description" content="">
  <style>
    .container-full{
      width: 99.3%;
      height: 100%;
      margin: 0;
      padding: 0;

      /*width: 70%;
      margin: 0 auto;*/

      /*width: 70%;
      height: 90%;
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      margin: auto;
      border: 2px solid #dadada;
      border-radius: 10px;
      padding: 0.2em;
      box-shadow: -1px -2px 3px rgba(74,74,74,0.3);*/
    }
  </style>
</head>
<body>
  {{# if blog.admin}}
      <div class="container-full height100">
        <div class="row height100">
          <div class="col-xs-12 col-sm-12">
            <div class="box height100">
              <div id="admin" class="height100">{{{blog.serverSide}}}</div>
            </div>
          </div>
        </div>
      </div>
  {{else}}

      {{# if istab}}
          <style>
            {{# if istab}}
              html, body, .row, #blog, .tabsGroup{
                height: 100%;
                width: 100%;
              }
            {{/ if}}
          </style>
          <div class="container-full">
            <div id="blog">{{{blog.list}}}</div>
          </div>

      {{else}}

          <!-- 文章内容页 -->
          {{# if blog.mdcontent}}

                <div class="container-fluid height100">
                  <div class="row markdown-body">
                    <div class="col-xs-12 col-sm-8" >
                      <h1>{{blog.mdcontent.title}}</h1>
                      <small>作者：{{blog.mdcontent.user.nickname}}</small>
                      <div id='detail' class="detail">
                        {{{blog.mdcontent.cnt}}}
                      </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                      <div id="side-menu" class="side-menu">
                        <h4>文章目录</h4>
                        {{{blog.mdcontent.mdmenu}}}
                      </div>
                    </div>
                  </div>
                </div>

          {{else}}

                <div class="container-full height100">
                  <div class="row height100">
                    <!-- 添加新的文章 -->
                    {{# if xAdd}}
                      <div id="epiceditor" class="col-xs-12 col-sm-12"></div>
                    {{else if xEdit}}
                      <div id="epiceditor" class="col-xs-12 col-sm-12"></div>
                    {{else}}

                      <!-- 文章列表页 -->
                      <div class="col-xs-12 col-sm-4 left">
                        <div class="bg">
                          <div class="btn-toolbar toolbar">
                            <div class="btn-group btn-group-xs">
                              <a class="btn btn-success add" href="/blog/add"><i class="iconfont icon-jia1"></i></a>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="col-xs-12 col-sm-8">
                        <div class="box height100s">
                          <div class="navb row">
                            <div class="col-sm-2">
                              <img src="/images/logo32.png" alt="" />
                            </div>
                          </div>
                          <div id="blog" class='blogs'>{{{blog.list}}}</div>
                        </div>
                      </div>
                    {{/if}}
                  </div>
                </div>
          {{/if}}

    {{/if}}
  {{/if}}

</body>
{{{commonjs}}}
{{{attachJs}}}
{{{pagejs}}}
</html>
